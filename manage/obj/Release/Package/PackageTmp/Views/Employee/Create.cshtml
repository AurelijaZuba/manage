@model manage.Models.Employee

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/LayoutMainPage.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
