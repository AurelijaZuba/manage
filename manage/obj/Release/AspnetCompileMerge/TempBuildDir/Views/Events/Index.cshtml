@model IEnumerable<manage.Models.Events>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutMainPage.cshtml";

}

<h2>Events</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm())

    {
    <p>
        Venue: @Html.DropDownList("Venue", "All")
        Name: @Html.TextBox("searchString")
        <input type="submit" value="Filter" />

    </p>
    }

    <table class="table">
        <tr>
            <th>
                Event Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>


                    @*Adding action link //  *@

                    <a href="@Url.Action("Edit", new { id=item.EventID })" title="Edit">
                        <i class="glyphicon glyphicon-pencil"></i>
                        <span class="sr-only">Edit</span>
                    </a> |

                    <a href="@Url.Action("Delete", new { id=item.EventID })" title="Delete">
                        <i class="glyphicon glyphicon-trash"></i>
                        <span class="sr-only">Delete</span>
                    </a> |
                    <a href="@Url.Action("Details", new { id=item.EventID })" title="Details">
                        <i class="glyphicon glyphicon-list"></i>
                        <span class="sr-only">Details</span>
                    </a> |

                </td>
            </tr>
        }
    </table>
